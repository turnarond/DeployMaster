<Application x:Class="SimpleFTP.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SimpleFTP"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- 声明 BooleanToVisibilityConverter 为全局资源 -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <BitmapImage x:Key="FolderIcon" UriSource="/Resources/FolderIcon.png" />
        <BitmapImage x:Key="FileIcon" UriSource="/Resources/FileIcon.png" />
    </Application.Resources>
</Application>
